<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Naturamarket</display-name>
    
    <servlet>
        <servlet-name>produto</servlet-name>
        <servlet-class>edu.ucan.naturemarket.servlet.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>produto</servlet-name>
        <servlet-class>edu.ucan.naturemarket.servlet.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UtilizadorServlet</servlet-name>
        <servlet-class>edu.ucan.naturemarket.servlet.UtilizadorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>produto</servlet-name>
        <url-pattern>/produto</url-pattern>
        <url-pattern>/produtos/carrinho</url-pattern>
    </servlet-mapping>
    
    <!--Utilizador-->
    <servlet-mapping>
        <servlet-name>UtilizadorServlet</servlet-name>
        <url-pattern>/utilizador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/entrar</url-pattern>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>pages/home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
